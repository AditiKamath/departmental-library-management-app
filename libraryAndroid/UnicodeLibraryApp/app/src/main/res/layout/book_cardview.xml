<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/book_cardview_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp"
        >

        <ImageView
            android:id="@+id/book_cv_thumbnail"
            android:layout_width="100dp"
            android:layout_height="125dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/book_thumbnail_not_found_icon"
            android:scaleType="fitXY"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/book_cv_thumbnail"
            android:layout_marginLeft="12dp"
            >

            <TextView
                android:id="@+id/book_cv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Condensed Matter Physics"
                android:textAppearance="@android:style/TextAppearance.Large"
                />

            <TextView
                android:id="@+id/book_cv_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="By Author name"
                android:textSize="20sp"
                android:layout_marginTop="8dp"
                />

            <TextView
                android:id="@+id/book_cv_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="In Physics"
                android:layout_marginTop="8dp"
                />

            <ImageView
                android:id="@+id/book_cv_avail_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/book_cv_avail_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Available"
                android:layout_marginTop="8dp"
                />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>