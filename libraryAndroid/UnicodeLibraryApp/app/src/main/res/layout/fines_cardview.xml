<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/fines_cardview_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp"
        >

        <ImageView
            android:id="@+id/book_thumbnail"
            android:layout_width="112dp"
            android:layout_height="140dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_menu_book_24"
            android:scaleType="fitXY"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/book_thumbnail"
            android:layout_marginLeft="18dp"
            >

            <TextView
                android:id="@+id/book_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Condensed Matter Physics"
                android:textSize="16dp"
                />

            <TextView
                android:id="@+id/book_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="By Author name"
                android:textSize="15dp"
                />

            <TextView
                android:id="@+id/book_fine_amt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Fine Amount:â‚¹50"
                android:textSize="16dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/book_due_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="2 days overdue"
                android:textSize="16dp"
                android:layout_marginTop="8dp"
                />
            <androidx.cardview.widget.CardView
                android:id="@+id/paid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#219653"
                app:cardCornerRadius="8dp"
                android:layout_marginTop="4dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PAID"
                        android:textSize="16dp"
                        android:textColor="#ffffff"
                        android:layout_centerInParent="true"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/unpaid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#b00020"
                app:cardCornerRadius="8dp"
                android:layout_marginTop="4dp"
                android:visibility="gone">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UNPAID"
                        android:textSize="16dp"
                        android:textColor="#ffffff"
                        android:layout_centerInParent="true"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>



        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>