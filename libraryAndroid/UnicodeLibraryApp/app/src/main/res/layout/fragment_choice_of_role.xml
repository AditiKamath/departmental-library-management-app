<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/choiceOfRole"
    tools:context=".ChoiceOfRoleFragment">

    <TextView
        android:id="@+id/which_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="178dp"
        android:layout_marginRight="20dp"
        style="@style/SignupText"
        android:text="Are you a student or a teacher?"
        android:layout_marginBottom="35dp" />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:id="@+id/student_bt"
        android:layout_centerHorizontal="true"
        android:text="student"
        android:textColor="#7A2048"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingRight="78dp"
        android:paddingLeft="78dp"
        android:textSize="24sp"
        android:fontFamily="@font/roboto"
        android:background="@drawable/waitingbt_bg"
        android:layout_below="@id/which_role"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:id="@+id/teacher_bt"
        android:text="teacher"
        android:textColor="#7A2048"
        android:paddingTop="12dp"
        android:fontFamily="@font/roboto"
        android:paddingBottom="12dp"
        android:paddingRight="78dp"
        android:paddingLeft="78dp"
        android:textSize="24sp"
        android:background="@drawable/waitingbt_bg"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/student_bt"
        android:layout_height="wrap_content"/>


</RelativeLayout>