<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
        <LinearLayout
            android:id="@+id/login_creds_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            >

            <TextView
                android:id="@+id/login_fragment_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="104dp"
                android:text="Login"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:textSize="32sp"
                />

            <TextView
                android:id="@+id/login_email_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Email"
                android:textStyle="bold"
                android:textAppearance="@android:style/TextAppearance"
                android:textSize="20sp"
                />

            <EditText
                android:id="@+id/login_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:padding="8dp"
                android:hint="Email"
                android:background="@drawable/login_textbox_bg"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/login_password_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Password"
                android:textStyle="bold"
                android:textAppearance="@android:style/TextAppearance"
                android:textSize="20sp"
                />

            <EditText
                android:id="@+id/login_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:padding="8dp"
                android:hint="Password"
                android:background="@drawable/login_textbox_bg"
                android:inputType="textPassword"
                />

            <Button
                android:id="@+id/login_submit_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:padding="8dp"
                android:text="Login"
                android:backgroundTint="@drawable/auth_btn_states"
                android:textColor="@color/white"
                />

            <TextView
                android:id="@+id/login_signup_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/login_signup_link_txt"
                android:gravity="center_horizontal"
                android:textSize="16sp"
                />

        </LinearLayout>

</ScrollView>